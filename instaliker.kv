<LoginScreen>
    email_field:email_field
    pwd_field:pwd_field
    id:  main_win
    orientation: "vertical"
    spacing: 20
    space_x: self.size [0]/6  #0 in this case is the x, 1 would be the y
    canvas.before: 
        Color:
            rgba: 1, 1, 1, .3
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Insta.png"

    BoxLayout:
        size_hint_y: None # This one will make the widget to take the entire avaliabe space in the screen
        height: 50 # When we tunr size_hint off we have to difine the size
        canvas.before: 
            Color:
                rgba: 0, 0, 0, .6
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: self.pos
            size: self.size
            text:"          InstaLiker"
            bold: True
            size_hint_x:.9 # 90% of screen
        Button:
            text: "x"
            size_hint_x:.1
            background_color: 0,0,0,0
            on_press: root.close()
            
    BoxLayout:
        size_hint_y: None # This one will make the widget to take the entire avaliabe space in the screen
        height: 50 # When we tunr size_hint off we have to difine the size
        canvas.before: 
        Label:
            pos: self.pos
            size: self.size
            text:"Entre com sua conta do Instagram"
            bold: True

    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        BoxLayout:
            spacing: main_win.spacing
            orientation: "vertical"
            size_hint_y: None
            height: 180 # It is divided by the number of widgets inside  of this BoxLayout
            TextInput:
                id: email_field
                hint_text: "Email"
                multiline: False
                write_tab: False
                focus: True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                write_tab: False
                password: True
                focus: True
            Label:
            Button:
                text: "Start"
                on_release: root.insta_login()
        Label:
            text: "www.taskforbot.com.br"